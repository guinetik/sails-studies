<div class="container" style="margin-bottom: 100px">
  <div class="row"
       style="margin-top:20px">
    <div class="col-xs-12">
      <form role="form"
            action="/session/create"
            method="POST">
        <input type="hidden"
               name="_csrf"
               value="<%= _csrf %>"/>
        <fieldset>
          <h2>Please Sign In</h2>
          <hr class="colorgraph">
          <div class="form-group">
            <input type="email"
                   name="email"
                   id="email"
                   class="form-control input-lg"
                   placeholder="Email Address">
          </div>
          <div class="form-group">
            <input type="password"
                   name="password"
                   id="password"
                   class="form-control input-lg"
                   placeholder="Password">
          </div>
				<span class="button-checkbox">
					<button type="button"
                  class="btn"
                  data-color="info">Remember Me
          </button>
                    <input type="checkbox"
                           name="remember_me"
                           id="remember_me"
                           checked="checked"
                           class="hidden">
					<a href=""
             class="btn btn-link pull-right">Forgot Password?</a>
				</span>
          <hr class="colorgraph">
          <% if(flash && flash.err) { %>
          <ul class="padding alert alert-dismissable alert-danger">
            <% Object.keys(flash.err).forEach(function(error) { %>
            <li><%- flash.err[error] %></li>
            <% }) %>
          </ul>
          <% } %>
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <input type="submit"
                     class="btn btn-lg btn-success btn-block"
                     value="Sign In">
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <a href="/user/new"
                 class="btn btn-lg btn-primary btn-block">Sign in</a>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>
